<div class="reservation">
  <h2><%= @reservation.status ? @reservation.status.capitalize : "Pending" %> Rental reservation from <%= @reservation.user.name %></h2>

  <h4>Property: <%= @place.address %></h4>
  <h4>Owner: <%= @place.owner.name %></h4>
  <h4>Check In: <%= @reservation.check_in.strftime("%m/%d/%Y") %></h4>
  <h4>Check Out: <%= @reservation.check_out.strftime("%m/%d/%Y") %></h4>
</div>

<a href="#new_message" role="button" class="btn" data-toggle="modal" id="message_button">Send <%= current_user.id == @place.owner_id ? "Requester" : "Owner" %> A Message</a>

<% unless @reservation.status %>
  <%= link_to "Approve", 
              approve_place_reservation_url(@place, @reservation),
              class: "btn btn-success link_button" %>
  <%= link_to "Deny", 
      deny_place_reservation_url(@place, @reservation),
      class: "btn btn-danger link_button" %>
<% end %>
<br>

<%= link_to "All Reservations", place_reservations_url(@place), class: "btn btn-primary" %>
<%= link_to "Back To Place", @place, class: "btn btn-inverse" %>
