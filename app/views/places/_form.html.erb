<%= form_for @place, html: { multipart: true } do |f| %>


    <div class="form-group" >
      <p><%= f.label :kind %> 
      <%= f.text_field :kind,  class: "form-control", placeholder: "House, Apartment, or Condo?" %>
      </p>
  
      <p> <%= f.label :address %> 
      <%= f.text_field :address,  class: "form-control", placeholder: "What street do you live on?" %>
      </p>
  
      <p> <%= f.label :state %>
      <%= f.text_field :state,  class: "form-control", placeholder: "State?" %>
      </p>
  
      <p><%= f.label :description %>
      <%= f.text_field :description,  class: "form-control", placeholder: "Give some details about your place" %>
      </p>

      <p> <%= f.label :availability %> 
      <%= f.text_field :availability,  class: "form-control", placeholder: "When do you want to rent it out?" %>
      </p>
 
      <p><%= f.label :price %> 
      <%= f.text_field :price,  class: "form-control", placeholder: "What is the nightly rent?" %>
      </p>
    </div>

    <div class="form-group">
      <%= f.submit class: "btn btn-primary" %>
    </div>
      
<% end %>