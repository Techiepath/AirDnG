<%= render 'pages/home' unless user_signed_in? %>

<div id="places" >
  <% @places.each do |place| %>
    <div class="box panel panel-default">

      <p class="content">
        <div class="panel-body">
          <h4><strong>Title: </strong><%= place.title %></h4>
          <p><strong>Type: </strong><%= place.kind %></p>
          <p><strong>Location: </strong><%= place.address %></p>
          <p><strong>State: </strong><%= place.state %></p>
          <p><strong>Price: </strong><%= place.price %></p>
          <p><strong>Details: </strong><%= place.description %></p>


          <strong><%= link_to 'More info', place_path(place) %></strong>
        </br>
        </br>

          <% if place.owner == current_user %>
            <div class="actions">
              <%= link_to edit_place_path(place) do %>
                <span class="glyphicon glyphicon-edit">Edit</span>
              <% end %>
              
              <%= link_to place, method: :delete, data: { confirm: 'Are you sure?' } do %>
                <span class="glyphicon glyphicon-trash">Delete</span>
              <% end %>
            </div>
            
          <% end %>
          

      </div>
    </div>
  <% end %>

</div>